@model IEnumerable<StockZilla.Models.ProduitModel>

<h1 class="text-center mb-4">Produits de la catégorie : @ViewBag.CategorieNom</h1>

<div class="container" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 20px; border-radius: 0;">
    @foreach (var produit in Model)
    {
        <div class="card shadow-sm  " style="width: 100%; transition: transform 0.3s ease-in-out; border-radius: 0;">
            <!-- Appliquer une taille fixe pour l'image avec un effet d'ombre et des bordures arrondies -->
            <div style="width: 100%; height: 200px; background-color: white; overflow: hidden; border-radius:0;">
                <img src="data:image/jpeg;base64,@produit.ImageBase64" 
                     style="width: 100%; height: 100%; object-fit: cover; border-radius: 10px 10px 0 0;" 
                     class="card-img-top" 
                     alt="@produit.NomProduit">
            </div>
            <div class="card-body text-center">
                <h5 class="card-title text-truncate" style="font-size: 1.1rem; font-weight: bold;">@produit.NomProduit</h5>
                @if (produit.Remise != 0) {
                    <span class="badge bg-danger text-white" style="border-radius:0;">En promo !</span>
                }
                <div class="mt-3">
                    <a href="@Url.Action("DetailsProduits", "Produit", new { idprod = produit.Id })" class="btn  w-100">Voir+</a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Ajouter un effet au survol de la carte -->
<style>
    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
</style>
